<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<application xmlns="http://ns.adobe.com/air/application/17.0">
    <!--
        AIR application descriptor elements
        http://help.adobe.com/en_US/air/build/WSfffb011ac560372f2fea1812938a6e463-8000.html 
    -->
    <!-- 
        You might want to keep air and cocos versions of the app separately 
        identified.  In case you wanted to be able to install/remove them 
        separately on your various devices.
        
        Also, if you delete/recreate the p12 file for android/air, expect
        an error until you explicitly remove the previous version of the app.
        
        If something gets 'bent' after installing 'native' packages or using 
        'app' from the Cocos side, you'll have to rename this, or the AIR 
        installer will 'fail'.
    -->
    <id>com.air.company.Example</id>
    <versionNumber>1.0</versionNumber>
    <filename>Example</filename>
    <description>Example App</description>
    <!-- To localize the description, use the following format for the description element.
	<description>
		<text xml:lang="en">English App description goes here</text>
		<text xml:lang="fr">French App description goes here</text>
		<text xml:lang="ja">Japanese App description goes here</text>
	</description>
	-->
    <name>Example App</name>
    <!-- To localize the name, use the following format for the name element.
	<name>
		<text xml:lang="en">English App name goes here</text>
		<text xml:lang="fr">French App name goes here</text>
		<text xml:lang="ja">Japanese App name goes here</text>
	</name>
	-->
    <copyright></copyright>
    <initialWindow>
		<title>Example App</title>
        <content>Example.swf</content>
        <systemChrome>standard</systemChrome>
        <transparent>false</transparent>
        <visible>true</visible>
		<minimizable>true</minimizable>
		<maximizable>true</maximizable>
        <fullScreen>true</fullScreen>
        <autoOrients>false</autoOrients>
        <aspectRatio>portrait</aspectRatio>
        <renderMode>auto</renderMode>
        <width>500</width> 
        <height>500</height> 
    </initialWindow>
    <customUpdateUI>false</customUpdateUI>
    <allowBrowserInvocation>false</allowBrowserInvocation>
	<!-- Setup/Deployment Settings -->
    <icon>
        <image16x16>AppIconsForPublish/appicon16.png</image16x16>
        <image32x32>AppIconsForPublish/appicon32.png</image32x32>
        <image48x48>AppIconsForPublish/appicon48.png</image48x48>
        <image128x128>AppIconsForPublish/appicon128.png</image128x128>
        <image512x512>AppIconsForPublish/appicon512.png</image512x512>
        <image1024x1024>AppIconsForPublish/appicon1024.png</image1024x1024>
    </icon>
    <supportedProfiles>desktop extendedDesktop</supportedProfiles>
</application>
